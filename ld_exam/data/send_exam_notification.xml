<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_exam_schedule" model="mail.template">
            <field name="name">Exam Schedule Notification</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">Exam Schedule Notification</field>
            <field name="lang">${object.env.user.lang}</field>
            <field name="model_id" ref="model_op_exam_session" />
            <field name="auto_delete" eval="False" />
            <field name="report_name">${object.name or 'Exam Schedule Notification'}</field>
            <field name="body_html"><![CDATA[
                <p>Hello ${object.attendee_student_id.name},</p>
                <p>Your exam for ${object.exam_name} has been scheduled.</p>
                <p>Exam Session: ${object.session_name}</p>
                <p>Start Date: ${object.start_date}</p>
                <p>End Date: ${object.end_date}</p>
                <p>Good luck!</p>
            ]]></field>
        </record>
    </data>
</odoo>

