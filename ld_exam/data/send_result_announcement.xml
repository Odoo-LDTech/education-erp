<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_result_announcement" model="mail.template">
            <field name="name">Result Announcement Notification</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">Result Announcement Notification</field>
            <field name="lang">${object.env.user.lang}</field>
            <field name="model_id" ref="model_op_marksheet_register" />
            <field name="auto_delete" eval="False" />
            <field name="report_name">${object.name or 'Result Announcement Notification'}</field>
            <field name="body_html"><![CDATA[
                <p>Hello ${object.student_id.name},</p>
                <p>Your result for the exam has been announced.</p>
                <p>Exam Session: ${object.exam_session_id.name}</p>
                <p>Announcement Date: ${object.generated_date}</p>
                <p>Good luck!</p>
            ]]></field>
        </record>
    </data>
</odoo>
