<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_result_publish" model="mail.template">
            <field name="name">Result Publish Notification</field>
            <field name="email_from">${object.env.user.email}</field>
            <field name="subject">Result Publish Notification</field>
            <field name="lang">${object.env.user.lang}</field>
            <field name="model_id" ref="model_op_exam_session" />
            <field name="auto_delete" eval="False" />
            <field name="report_name">${object.name or 'Result Publish Notification'}</field>
            <field name="body_html"><![CDATA[
                <p>Hello ${object.attendee_student_id.name},</p>
                <p>Your exam results for ${object.exam_name} will be published on ${object.result_publish_date}.</p>
                <p>Exam Session: ${object.session_name}</p>
                <p>Good luck!</p>
            ]]></field>
        </record>
    </data>
</odoo>
