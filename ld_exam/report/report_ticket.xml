<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_ticket">
            <style>
                .font{
                font-size:14px;
                font-family:"Helvetica"
                }
                @page{
                margin-top:1%;
                size: A4;
                }
            </style>
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br/>
                        <br/>
                        <br/>
                        <div class="oe_structure"/>
                        <t t-foreach="docs" t-as="o">
                            <div class="font">
                                <div class="page">
                                    <br/>
                                    <br/>
                                    <br/>
                                    <div class="text-center">
                                        <h1>
                                            <b>Hall Ticket</b>
                                        </h1>
                                    </div>
                                    <br/>

                                    <table class="table table-bordered">
                                        <thead class="text-center"
                                               style="background-color:#eeeeee; font-size:14px; font-weight:600;">
                                            <th class="text-center">Student Image</th>
                                            <th class="text-center">Student Name</th>
                                            <th class="text-center">Exam</th>
                                            <th class="text-center">Course</th>
                                            <th class="text-center">Room Number</th>
                                        </thead>
                                        <tbody class="text-center" style="font-size:12px;"
                                               t-foreach="o.exam_session_id.exam_ids.attendees_line"
                                               t-as="attendee">

                                            <tr>
                                                <td class="text-right">
                                                    <img alt="Student Image"
                                                         style="padding: 2px;"
                                                         t-att-src="image_data_uri(attendee.student_id.image_1920)"
                                                         width="60"/>
                                                </td>
                                                <!--                                                <td style="padding: 15px">-->
                                                <!--                                                    <b>Student Name:</b>-->
                                                <!--                                                </td>-->
                                                <td style="padding: 15px">
                                                    <span t-esc="attendee.student_id.name"/>
                                                </td>

                                                <!--                                                <td style="padding: 15px">-->
                                                <!--                                                    <b>Exam:</b>-->
                                                <!--                                                </td>-->
                                                <td style="padding: 15px">
                                                    <span t-esc="attendee.exam_id.name"/>
                                                </td>

                                                <!--                                                <td style="padding: 15px">-->
                                                <!--                                                    <b>Course:</b>-->
                                                <!--                                                </td>-->
                                                <td style="padding: 15px">
                                                    <span t-esc="attendee.course_id.name"/>
                                                </td>

                                                <!--                                                <td style="padding: 15px">-->
                                                <!--                                                    <b>Room Number:</b>-->
                                                <!--                                                </td>-->
                                                <td style="padding: 15px">
                                                    <span t-esc="attendee.room_id.name"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <br/>
                                    <br/>
                                    <table class="table table-bordered">
                                        <thead class="text-center"
                                               style="background-color:#eeeeee; font-size:14px; font-weight:600;">
                                            <th class="text-center">Exam</th>
                                            <th class="text-center">Exam code</th>
                                            <th class="text-center">Subject</th>
                                            <th class="text-center">Start Time</th>
                                            <th class="text-center">End Time</th>
                                        </thead>
                                        <tbody class="text-center" style="font-size:12px;">
                                            <tr t-foreach="o.exam_session_id.exam_ids" t-as='s'>

                                                <td>
                                                    <span t-out="s.name if  s.name else ''"/>
                                                </td>
                                                <td>
                                                    <span t-out="s.exam_code if  s.exam_code else ''"/>
                                                </td>
                                                <td>
                                                    <span t-out="s.subject_id.name if  s.subject_id.name else ''"/>
                                                </td>
                                                <td>
                                                    <span t-out="s.start_time if  s.start_time else ''"
                                                          t-options="{'widget':'date'}"/>
                                                </td>
                                                <td>
                                                    <span t-out="s.end_time if  s.end_time else ''"
                                                          t-options="{'widget':'date'}"/>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <p style="page-break-after:always"/>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
