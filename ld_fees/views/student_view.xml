<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_student_form_fees_inherit" model="ir.ui.view">
            <field name="name">op.student.form.fees.inherit</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="ld_core.view_op_student_form"/>
            <field name="priority" eval="2"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="btn oe_stat_button"
                            type="object"
                            name="count_fees_details"
                            style="border-right: 1px solid;border-bottom: 1px solid;white-space: inherit;display: inline-flex;"
                            icon="fa-file">
                        <field string="Fees Details" name="fees_details_count" widget="statinfo"/>
                    </button>
                    <button class="btn oe_stat_button" type="object"
                            name="action_view_invoice"
                            style="border-right: 1px solid;"
                            icon="fa-pencil-square-o">
                        <field string="Invoiced" name="total_invoiced" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='miscellaneous']" position="after">
                    <page name="fees_detail" string="Fees Details">
                        <tree>
                            <field name="fees_detail_ids">
                                <tree string="Fees Details">
                                    <field name="date"/>
                                    <field name="discount"/>
                                    <field name="after_discount_amount"/>
                                    <field name="amount"/>
                                    <field name="state"/>
                                    <field name="invoice_id"/>
                                    <button name="action_create_invoice_std" string="Create Invoice" type="object"
                                            class="btn-primary"/>
                                </tree>
                            </field>
                        </tree>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
